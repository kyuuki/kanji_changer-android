<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">
    <TextView
            android:text="数字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_number" app:layout_constraintEnd_toStartOf="@+id/edit_text_number"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/edit_text_number" android:layout_marginTop="16dp"/>
    <TextView
            android:text="漢字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_kanji" app:layout_constraintEnd_toStartOf="@+id/edit_text_number"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_result_kanji"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_result_kanji" app:layout_constraintEnd_toEndOf="@+id/edit_text_number"
            app:layout_constraintStart_toStartOf="@+id/edit_text_number" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_text_number"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.0" android:text="ここに変換結果が表示されます"
            android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edit_text_number"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.587"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="変換"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_change" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/text_result_kanji"
            android:layout_marginTop="60dp" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>